<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dyhc.sdglgroundconnection.mapper.VehicleTypeMapper">
    <select id="listVehicleTypes" resultType="com.dyhc.sdglgroundconnection.pojo.VehicleType">
        select * from vehicleType
        <where>
            <if test="costprice1!=null">
                costprice>=#{costprice1}
            </if>
            <if test="costprice2!=null">
                and costprice&lt;=#{costprice2}
            </if>
            <if test="passengervolume!=null">
                and passengervolume=#{passengervolume}
            </if>
            and whetherDel=3
        </where>
    </select>

    <delete id="deleteVehicleTypesBycarRentalId">
        DELETE FROM `vehicletype` WHERE carRentalId=#{carRentalId}
    </delete>
</mapper>